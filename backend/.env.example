# ============================================
# Office Bridge - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# DATABASE
# ============================================
# SQLite (simple, good for small deployments)
DATABASE_URL=sqlite:///./office_bridge.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/office_bridge

# ============================================
# SECURITY
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production

# JWT token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ============================================
# FILE STORAGE
# ============================================
# Option 1: Local Storage (default)
USE_S3=false
UPLOAD_DIR=./uploads

# Option 2: AWS S3
# USE_S3=true
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_REGION=us-east-1
# S3_CDN_URL=https://your-cdn.cloudfront.net  # Optional

# Option 3: DigitalOcean Spaces (S3-compatible)
# USE_S3=true
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
# S3_BUCKET=your-space-name
# S3_ACCESS_KEY=your-spaces-key
# S3_SECRET_KEY=your-spaces-secret
# S3_REGION=nyc3
# S3_CDN_URL=https://your-space.nyc3.cdn.digitaloceanspaces.com  # Optional

# Option 4: Backblaze B2 (S3-compatible, cheapest)
# USE_S3=true
# S3_ENDPOINT=https://s3.us-west-000.backblazeb2.com
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY=your-key-id
# S3_SECRET_KEY=your-application-key
# S3_REGION=us-west-000

# ============================================
# CORS (Frontend URLs allowed to access API)
# ============================================
# Development
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","capacitor://localhost","http://localhost"]

# Production (add your domain)
# CORS_ORIGINS=["https://your-app.com","capacitor://localhost","http://localhost"]

# ============================================
# APP SETTINGS
# ============================================
APP_NAME=Office Bridge
APP_VERSION=1.0.0
API_V1_PREFIX=/api

# Debug mode (set to false in production)
DEBUG=true

# ============================================
# OPTIONAL: Push Notifications (Firebase)
# ============================================
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY=your-private-key
# FIREBASE_CLIENT_EMAIL=your-client-email

# ============================================
# OPTIONAL: Email (for sending POs, notifications)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=Office Bridge <noreply@your-domain.com>
